@model VigiLant.Models.Risco
@{
    ViewData["Title"] = "Detalhes do Risco";
}

@section Styles {
    <link rel="stylesheet" href="/css/viewrevo.css" asp-append-version="true" />
}

<div class="page-header">
    <h1 class="page-title">Detalhes do Risco: **@Model.Nome**</h1>
    <div class="breadcrumb">
        <a href="@Url.Action("Index", "Home")">Dashboard</a>
        <span class="separator">/</span>
        <a href="@Url.Action("Index")">Riscos</a>
        <span class="separator">/</span>
        <span class="active">Detalhes</span>
    </div>
</div>

<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">Nome do Risco</dt>
        <dd class="col-sm-9">@Model.Nome</dd>

        <dt class="col-sm-3">Descrição</dt>
        <dd class="col-sm-9">@Model.Descricao</dd>

        <dt class="col-sm-3">Nível de Gravidade</dt>
        <dd class="col-sm-9">
            @* Reutiliza a lógica de badge da Index, se o Enum for NivelSeveridade *@
            @{
                string badgeClass = Model.NivelGravidade switch
                {
                    VigiLant.Models.Enum.NivelSeveridade.Critico => "danger",
                    VigiLant.Models.Enum.NivelSeveridade.Alto => "warning",
                    VigiLant.Models.Enum.NivelSeveridade.Medio => "info",
                    _ => "success",
                };
            }
            <span class="status-badge @badgeClass">@Model.NivelGravidade</span>
        </dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">
            @{
                string statusBadgeClass = Model.Status switch
                {
                    "Resolvido" => "success",
                    "Em Tratamento" or "Em Análise" => "info",
                    _ => "warning",
                };
            }
            <span class="status-badge @statusBadgeClass">@Model.Status</span>
        </dd>

        <dt class="col-sm-3">Data Identificação</dt>
        <dd class="col-sm-9">@Model.DataIdentificacao.ToString("dd/MM/yyyy")</dd>

        @* Adicione aqui outros campos do seu modelo Risco, se houverem *@
    </dl>
</div>

<div class="mt-4">
    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn-primary">
        <i class="fas fa-edit"></i> Editar
    </a>
    <a href="@Url.Action("Index")" class="btn-secondary">
        <i class="fas fa-arrow-left"></i> Voltar para a Lista
    </a>
</div>