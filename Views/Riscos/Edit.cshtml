@using VigiLant.Models.Enum
@model VigiLant.Models.Risco
@{
    ViewData["Title"] = "Editar Risco";
}

@section Styles {
    <link rel="stylesheet" href="/css/viewrevo.css" asp-append-version="true" />
}

<div class="page-header">
    <h1 class="page-title">Editar Risco: **@Model.Nome**</h1>
    <div class="breadcrumb">
        <a href="@Url.Action("Index", "Home")">Dashboard</a>
        <span class="separator">/</span>
        <a href="@Url.Action("Index")">Riscos</a>
        <span class="separator">/</span>
        <span class="active">Editar</span>
    </div>
</div>

<div class="card p-4">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        
        <div class="form-group mb-3">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Descricao" class="form-label"></label>
            <textarea asp-for="Descricao" class="form-control"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="NivelGravidade" class="form-label"></label>
            <select asp-for="NivelGravidade" asp-items="Html.GetEnumSelectList<NivelSeveridade>()" class="form-select"></select>
            <span asp-validation-for="NivelGravidade" class="text-danger"></span>
        </div>
        
        @* Assumindo que o Status é uma string, se for um enum, adapte como NivelGravidade *@
        <div class="form-group mb-3">
            <label asp-for="Status" class="form-label"></label>
            <input asp-for="Status" class="form-control" />
            @* Se o status tiver um conjunto fixo de valores, use um <select> e uma lista/enum *@
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DataIdentificacao" class="form-label"></label>
            <input asp-for="DataIdentificacao" type="date" class="form-control" />
            <span asp-validation-for="DataIdentificacao" class="text-danger"></span>
        </div>

        @* Adicione aqui outros campos para edição *@

        <div class="form-group mt-4">
            <button type="submit" class="btn-primary">
                <i class="fas fa-save"></i> Salvar Alterações
            </button>
            <a href="@Url.Action("Index")" class="btn-secondary">
                <i class="fas fa-arrow-left"></i> Cancelar
            </a>
        </div>
    </form>
</div>