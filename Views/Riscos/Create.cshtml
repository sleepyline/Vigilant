@using VigiLant.Models.Enum
@model VigiLant.Models.Risco
@{
    ViewData["Title"] = "Adicionar Novo Risco";
}

@section Styles {
    <link rel="stylesheet" href="/css/viewrevo.css" asp-append-version="true" />
}

<div class="page-header">
    <h1 class="page-title">Adicionar Novo Risco Manualmente</h1>
    <div class="breadcrumb">
        <a href="@Url.Action("Index", "Home")">Dashboard</a>
        <span class="separator">/</span>
        <a href="@Url.Action("Index")">Riscos</a>
        <span class="separator">/</span>
        <span class="active">Novo</span>
    </div>
</div>

<div class="card p-4">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Descricao" class="form-label"></label>
            <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="NivelGravidade" class="form-label"></label>
            @* Assumindo que NivelSeveridade é um enum *@
            <select asp-for="NivelGravidade" asp-items="Html.GetEnumSelectList<NivelSeveridade>()"
                class="form-select"></select>
            <span asp-validation-for="NivelGravidade" class="text-danger"></span>
        </div>

        @* Assumindo que Status é uma string, se for um enum ou lista fixa, adapte *@
        <div class="form-group mb-3">
            <label asp-for="Status" class="form-label"></label>
            <input asp-for="Status" class="form-control" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DataIdentificacao" class="form-label"></label>
            @* Usa type="date" para melhor controle no navegador *@
            <input asp-for="DataIdentificacao" type="date" class="form-control" /> <span
                asp-validation-for="DataIdentificacao" class="text-danger"></span>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn-primary">
                <i class="fas fa-plus"></i> Criar Risco
            </button>
            <a href="@Url.Action("Index")" class="btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar para a Lista
            </a>
        </div>
    </form>
</div>