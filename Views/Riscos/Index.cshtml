@using VigiLant.Models.Enum

@model IEnumerable<VigiLant.Models.Risco>
@{
    ViewData["Title"] = "Riscos";
}

<div class="page-header">
    <h1 class="page-title">Riscos</h1>
    <div class="breadcrumb">
        <a href="@Url.Action("Index", "Home")">Dashboard</a>
        <span class="separator">/</span>
        <span class="active">Riscos</span>
    </div>
</div>

<div class="page-actions">
    <div></div>
    <button type="button" class="btn-primary" id="btnAddRisco">
        <i class="fas fa-plus"></i>
        Adicionar Novo Risco Manualmente
    </button>
</div>

<div class="table-container">
    <table class="data-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome do Risco</th>
                <th>Descrição</th>
                <th>Nível de Gravidade</th>
                <th>Status</th>
                <th>Data Identificação</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var risco in Model)
            {
                <tr>
                    <td>#@risco.Id</td>
                    <td><strong>@risco.Nome</strong></td>
                    <td>@risco.Descricao</td>
                    <td>
                        @if (risco.NivelGravidade == NivelSeveridade.Critico)
                        {
                            <span class="status-badge danger">@risco.NivelGravidade</span>
                        }
                        else if (risco.NivelGravidade == NivelSeveridade.Alto)
                        {
                            <span class="status-badge warning">@risco.NivelGravidade</span>
                        }
                        else if (risco.NivelGravidade == NivelSeveridade.Medio)
                        {
                            <span class="status-badge info">@risco.NivelGravidade</span>
                        }
                        else
                        {
                            <span class="status-badge success">@risco.NivelGravidade</span>
                        }
                    </td>
                    <td>
                        @if (risco.Status == "Resolvido")
                        {
                            <span class="status-badge success">@risco.Status</span>
                        }
                        else if (risco.Status == "Em Tratamento" || risco.Status == "Em Análise")
                        {
                            <span class="status-badge info">@risco.Status</span>
                        }
                        else
                        {
                            <span class="status-badge warning">@risco.Status</span>
                        }
                    </td>
                    <td>@risco.DataIdentificacao.ToString("dd/MM/yyyy")</td>
                    <td>
                        <div class="table-actions">

                            @* 1. Botão EDITAR (Chama a Action Edit, passando o ID) *@
                            <a href="@Url.Action("Edit", new { id = risco.Id })" class="btn-icon" title="Editar">
                                <i class="fas fa-edit"></i>
                            </a>

                            @* 2. Botão EXCLUIR (Chama a Action DeleteConfirmation, passando o ID) *@
                            <a href="@Url.Action("DeleteConfirmation", new { id = risco.Id })" class="btn-icon text-danger"
                                title="Excluir">
                                <i class="fas fa-trash"></i>
                            </a>

                            @* 3. Botão VER DETALHES (Chama a Action Details, passando o ID) *@
                            <a href="@Url.Action("Details", new { id = risco.Id })" class="btn-icon" title="Ver Detalhes">
                                <i class="fas fa-eye"></i>
                            </a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        document.getElementById('btnAddRisco').addEventListener('click', function () {
            // Usa JavaScript para redirecionar para a Action Create do Controller Riscos
            window.location.href = '@Url.Action("Create", "Riscos")';
        });
    </script>
}