@model VigiLant.Models.Colaborador
@using VigiLant.Models.Enum @* Não se esqueça de adicionar este using *@
@{
    ViewData["Title"] = "Editar Colaborador";
}

@section Styles {
    <link rel="stylesheet" href="/css/viewrevo.css" asp-append-version="true" />
}

<div class="page-header">
    <h1 class="page-title">Editar Colaborador: **@Model.Nome**</h1>
    @* ... (Restante do Breadcrumb) ... *@
</div>

<div class="card p-4">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        
        <div class="form-group mb-3">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        @* START: Campo Cargo transformado em SELECT com Enum *@
        <div class="form-group mb-3">
            <label asp-for="Cargo" class="form-label"></label>
            <select asp-for="Cargo" 
                    asp-items="Html.GetEnumSelectList<Cargo>()" 
                    class="form-select">
                <option value="">-- Selecione o Cargo --</option>
            </select>
            <span asp-validation-for="Cargo" class="text-danger"></span>
        </div>
        @* END: Campo Cargo transformado em SELECT com Enum *@

        <div class="form-group mb-3">
            <label asp-for="Departamento" class="form-label"></label>
            <input asp-for="Departamento" class="form-control" />
            <span asp-validation-for="Departamento" class="text-danger"></span>
        </div>
        
        @* ... (Restante dos Campos Email, Telefone, DataAdmissao) ... *@

        <div class="form-group mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Telefone" class="form-label"></label>
            <input asp-for="Telefone" class="form-control" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DataAdmissao" class="form-label"></label>
            <input asp-for="DataAdmissao" type="date" class="form-control" />
            <span asp-validation-for="DataAdmissao" class="text-danger"></span>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn-primary">
                <i class="fas fa-save"></i> Salvar Alterações
            </button>
            <a href="@Url.Action("Index")" class="btn-secondary">
                <i class="fas fa-arrow-left"></i> Cancelar
            </a>
        </div>
    </form>
</div>