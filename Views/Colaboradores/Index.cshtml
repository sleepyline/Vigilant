@model IEnumerable<VigiLant.Models.Colaborador>
@{
    ViewData["Title"] = "Colaboradores";
}

<div class="page-header">
    <h1 class="page-title">Colaboradores</h1>
    <div class="breadcrumb">
        <a href="@Url.Action("Index", "Home")">Dashboard</a>
        <span class="separator">/</span>
        <span class="active">Colaboradores</span>
    </div>
</div>

<div class="page-actions">
    <div></div>
    @* Usando BUTTON com JS para manter o estilo do CSS *@
    <button type="button" class="btn-primary" id="btnAddColaborador">
        <i class="fas fa-plus"></i>
        Adicionar Novo Colaborador
    </button>
</div>

<div class="table-container">
    <table class="data-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Cargo</th>
                <th>Departamento</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Data Admissão</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var colaborador in Model)
            {
                <tr>
                    <td>#@colaborador.Id</td>
                    <td><strong>@colaborador.Nome</strong></td>
                    <td>@colaborador.Cargo</td> @* Exibe o nome do Enum *@
                    <td>@colaborador.Departamento</td>
                    <td>@colaborador.Email</td>
                    <td>@colaborador.Telefone</td>
                    <td>@colaborador.DataAdmissao.ToString("dd/MM/yyyy")</td>
                    <td>
                        <div class="table-actions">
                            @* EDITAR *@
                            <a href="@Url.Action("Edit", new { id = colaborador.Id })" class="btn-icon" title="Editar">
                                <i class="fas fa-edit"></i>
                            </a>
                            @* EXCLUIR *@
                            <a href="@Url.Action("DeleteConfirmation", new { id = colaborador.Id })" class="btn-icon text-danger" title="Excluir">
                                <i class="fas fa-trash"></i>
                            </a>
                            @* DETALHES *@
                            <a href="@Url.Action("Details", new { id = colaborador.Id })" class="btn-icon" title="Ver Detalhes">
                                <i class="fas fa-eye"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @* Script para o botão Adicionar *@
    <script>
        document.getElementById('btnAddColaborador').addEventListener('click', function() {
            window.location.href = '@Url.Action("Create", "Colaboradores")';
        });
    </script>
}