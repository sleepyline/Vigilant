@using VigiLant.Models.Enum
@model IEnumerable<VigiLant.Models.Equipamento>
@{
    ViewData["Title"] = "Equipamentos Monitorados";
}

<div class="page-header">
    <h1 class="page-title">Equipamentos IoT</h1>
    <div class="breadcrumb">
        <a href="@Url.Action("Index", "Home")">Dashboard</a>
        <span class="separator">/</span>
        <span class="active">Equipamentos</span>
    </div>
</div>

<div class="page-actions">
    <div></div>
    <div class="btts">
        <button type="button" class="btn-primary btn-ajax-modal" title="Novo Equipamento" data-form-id="conectarForm"
            data-action-type="Conectar" data-controller-url="@Url.Content("~/Equipamentos")" data-url-action="Monitorar"
            data-title="Conectar Novo Equipamento">
            <i class="fas fa-plug"></i>
             Conectar Novo Equipamento
        </button>
    </div>
</div>

<div class="table-container">
    <table class="data-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome do Equipamento</th>
                <th>Identificador (Broker)</th>
                <th>Localização</th>
                <th>Status</th>
                <th>Última Atualização</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var equipamento in Model)
            {
                <tr>
                    <td>#@equipamento.Id</td>
                    <td>@equipamento.Nome</td>
                    <td>@equipamento.IdentificadorBroker</td>
                    <td>@equipamento.Localizacao</td>
                    <td>
                        @{
                            var statusClass = equipamento.Status switch
                            {
                                StatusEquipament.Conectado => "success",
                                StatusEquipament.Desconectado => "danger",
                                StatusEquipament.Erro => "warning",
                                _ => "info"
                            };
                        }
                        <span class="status-badge @statusClass">
                            @equipamento.Status
                        </span>
                    </td>
                    <td>@equipamento.UltimaAtualizacao.ToString("dd/MM/yyyy HH:mm:ss")</td>
                    <td>
                        <div class="table-actions">
                            <button type="button" class="btn-icon btn-ajax-modal" title="Detalhes" data-id="@equipamento.Id"
                                data-action-type="details" data-controller-url="@Url.Content("~/Equipamentos")"
                                data-url-action="Details" data-title="Detalhes do Equipamento #@equipamento.Id">
                                <i class="fas fa-eye"></i>
                            </button>

                            <button type="button" class="btn-icon btn-ajax-modal" title="Monitorar"
                                data-id="@equipamento.Id" data-action-type="details"
                                data-controller-url="@Url.Content("~/Equipamentos")" data-url-action="Monitorar"
                                data-title="Monitorar Equipamento #@equipamento.Id">
                                <i class="fas fa-chart-line"></i>
                            </button>

                            <button type="button" class="btn-icon btn-ajax-modal text-danger" title="Desconectar"
                                data-id="@equipamento.Id" data-action-type="delete"
                                data-controller-url="@Url.Content("~/Equipamentos")" data-url-action="DeleteConfirmation"
                                data-title="Confirmação de Desconexão #@equipamento.Id" data-form-id="deleteForm">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div id="ajax-modal" class="modal-overlay">
    <div class="modal-content">
        <div class="modal-header">
            <h5 id="modalTitle">Título</h5> <button id="closeModalButton" ...>X</button>
        </div>
        <div id="modalBody" class="modal-body"> </div>
    </div>
</div>

@section Scripts {
    <script src="/js/Partialjs.js" asp-append-version="true"></script>
}