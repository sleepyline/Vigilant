@model VigiLant.Models.Equipamento

<link rel="stylesheet" href="/css/viewrevo.css" asp-append-version="true" />

<form asp-action="Edit" method="post" id="editEquipamentoForm">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Endereco" /> @* Manter broker fixo *@
    <input type="hidden" asp-for="Porta" /> @* Manter porta fixa *@

    <div class="SuperFlex">
        <div class="flex1">

            <div class="form-group mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Localizacao" class="form-label"></label>
                <input asp-for="Localizacao" class="form-control" />
                <span asp-validation-for="Localizacao" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="TipoSensor" class="form-label">Tipo de Sensor (Auto-detectado)</label>
                <input asp-for="TipoSensor" class="form-control" readonly />
            </div>

        </div>

        <div class="flex1">
            
            <div class="form-group mb-3">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="Ativo">Ativo</option>
                    <option value="Inativo">Inativo</option>
                    <option value="Manutencao">Manutenção</option>
                    <option value="PendenteConexao">Pendente Conexão</option>
                    <option value="ErroInicial">Erro Inicial</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DataUltimaManutencao" class="form-label">Data da Última Manutenção</label>
                <input asp-for="DataUltimaManutencao" type="date" class="form-control" />
                <span asp-validation-for="DataUltimaManutencao" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Topico" class="form-label">Tópico de Medição</label>
                <input asp-for="Topico" class="form-control" readonly />
            </div>
        </div>
    </div>

    <div class="form-group mt-4 text-end">
        <button type="submit" class="btn-primary">
            <i class="fas fa-save"></i> Salvar Alterações
        </button>
        <button type="button" class="btn-secondary" id="cancelModalButton">
            <i class="fas fa-arrow-left"></i> Cancelar
        </button>
    </div>
</form>

<script>
    if (window.jQuery && window.jQuery.validator && window.jQuery.validator.unobtrusive) {
        var form = document.getElementById('editEquipamentoForm');
        jQuery(form).data('validator', null);
        jQuery.validator.unobtrusive.parse(form);
    }
</script>