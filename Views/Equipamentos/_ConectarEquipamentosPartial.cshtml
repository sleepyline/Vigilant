@using VigiLant.Models.Enum
@model VigiLant.Models.Equipamento

@* Assumindo que você tem um arquivo CSS como o viewrevo.css *@
<link rel="stylesheet" href="/css/viewrevo.css" asp-append-version="true" />

<form asp-action="Conectar" method="post" id="equipamentoForm" data-ajax="true" data-ajax-method="POST" data-ajax-success="onAjaxSuccess" data-ajax-failure="onAjaxFailure">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @* Campos escondidos para garantir valores necessários no POST *@
    <input type="hidden" asp-for="DataUltimaManutencao" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
    <input type="hidden" asp-for="Status" value="Aguardando Conexão" />
    <input type="hidden" asp-for="TipoSensor" />

    <div class="SuperFlex">
        <div>
            <div class="form-group mb-3">
                <label asp-for="Nome" class="form-label">Nome do Equipamento</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Localizacao" class="form-label">Localização</label>
                <input asp-for="Localizacao" class="form-control" />
                <span asp-validation-for="Localizacao" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Endereco" class="form-label">Endereço do Broker (IP/Host)</label>
                <input asp-for="Endereco" class="form-control" placeholder="Ex: broker.emqx.io" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
        </div>

        <div>
            <div class="form-group mb-3">
                <label asp-for="TipoSensor" class="form-label">Tipo de Sensores</label>
                <select asp-for="TipoSensor" asp-items="Html.GetEnumSelectList<TipoSensores>()"
                    class="form-select"></select>
                <span asp-validation-for="TipoSensor" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Porta" class="form-label">Porta do Broker (Padrão 1883)</label>
                <input asp-for="Porta" type="number" class="form-control" />
                <span asp-validation-for="Porta" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Topico" class="form-label">Tópico de Medição</label>
                <input asp-for="Topico" class="form-control" placeholder="Ex: /vigiLant/equipamento/1/data" />
                <small class="text-muted">A resposta "Conectado" será esperada em: `<caminho_do_tópico>/status`</small>
                <span asp-validation-for="Topico" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group mt-4 text-end">
        <button type="submit" class="btn-primary" id="btnConectarSubmit">
            <i class="fas fa-plug"></i> Conectar e Cadastrar
        </button>
        <button type="button" class="btn-secondary" id="cancelModalButton" data-dismiss="modal">
            <i class="fas fa-arrow-left"></i> Cancelar
        </button>
    </div>
</form>

<script>
    if (window.jQuery && window.jQuery.validator) {
        $.validator.unobtrusive.parse(document.getElementById("equipamentoForm"));
    }
</script>